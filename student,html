button:hover { background:#45a049; }
.card { background:#f9f9f9; padding:1rem; margin:1rem 0; border-radius:10px; box-shadow:0 2px 6px rgba(0,0,0,0.1); }
#formDiv { display:none; opacity:0; transition: opacity 0.5s ease; }
#formDiv.show { display:block; opacity:1; }
#successMsg { color:green; font-weight:bold; margin-top:0.5rem; display:none; }
